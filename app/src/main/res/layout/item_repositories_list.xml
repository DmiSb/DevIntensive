<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_large_72"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/spacing_large_56">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/ff_condensed"
            android:textSize="@dimen/font_normal_12"
            android:text="@string/git_hint"
            android:paddingLeft="@dimen/size_line_4"
            android:paddingTop="@dimen/spacing_small_8"
            android:textColor="@color/grey"/>

        <TextView
            android:id="@+id/git_te"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/git_value"
            android:paddingTop="@dimen/spacing_normal_16"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:paddingLeft="@dimen/size_line_4"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/git_open_img"
        style="@style/icon.right"
        android:src="@drawable/ic_visibility_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</FrameLayout>