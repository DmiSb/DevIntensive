<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <!-- User profile style -->
    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="item_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="item_bar_detail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_normal_16</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_line_2</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/size_large_72</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
    </style>

    <!-- Rating bar Styles -->
    <style name="rating_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/spacing_half_large_28</item>
        <item name="android:paddingBottom">@dimen/spacing_half_large_28</item>
    </style>

    <style name="rating_bar_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="rating_bar_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/font_size_normal_16</item>
    </style>

    <style name="rating_bar_text.value" parent="rating_bar_text">
        <item name="android:textSize">@dimen/font_larger_24</item>"
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">@dimen/size_line_2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <!-- Other Styles -->
    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="drawer_menu_user_txt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Login activity -->
    <style name="login_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="login_bar_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_duble_small_48</item>
    </style>

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
